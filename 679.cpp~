#include <bits/stdc++.h>
using namespace std;

int n, D, I;


int main(){
    
    scanf("%d", &n);
    while(n--){
        scanf("%d %d", &D, &I);
        int r = 1;
        for(int i = 1; i < D; ++i)
            if(I&1){
                r = 2*r;
                I = (I+1)/2;
            }
            else{
                r = 2*r + 1;
                I = I/2;
            }
            
        
        printf("%d\n", r);
    }

    return 0;
}
